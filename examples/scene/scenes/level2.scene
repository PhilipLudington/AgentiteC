# Level 2 - Dark Dungeon
# A more challenging level with tougher enemies and better loot
# Note: Positions are halved due to coordinate scaling in spawn

# Player starting position (left side)
Player @(75, 180) {
    C_Health: {
        health: 100
        max_health: 100
    }

    C_SpriteRef: {
        texture_id: 0
        scale: 1.0
    }
}

