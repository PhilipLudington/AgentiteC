# Level 1 - Forest Clearing
# A simple introductory level with player, enemies, and items
# Note: Positions are halved due to coordinate scaling in spawn

# Player starting position (center-left)
Player @(150, 180) {
    C_Health: {
        health: 100
        max_health: 100
    }

    C_SpriteRef: {
        texture_id: 0
        scale: 1.0
    }
}

# Enemy patrol - Goblin 1
Goblin1 @(350, 150) {
    C_Health: {
        health: 30
        max_health: 30
    }

    C_EnemyType: {
        type_id: 1
        aggro_range: 120.0
    }

    C_SpriteRef: {
        texture_id: 1
        scale: 1.0
    }
}

# Enemy patrol - Goblin 2
Goblin2 @(450, 225) {
    C_Health: {
        health: 30
        max_health: 30
    }

    C_EnemyType: {
        type_id: 1
        aggro_range: 120.0
    }

    C_SpriteRef: {
        texture_id: 1
        scale: 1.0
    }
}

# Treasure chest
Chest @(550, 180) {
    C_Item: {
        item_id: 10
        value: 100
        can_pickup: true
    }

    C_SpriteRef: {
        texture_id: 2
        scale: 1.5
    }
}

